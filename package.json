{
    "name": "tbc-members-core-ui",
    "version": "0.3.0",
    "scripts": {
        "build": "vite build",
        "build:start": "cd dist && PORT=3000 npx serve",
        "dev": "vite",
        "preview": "vite preview",
        "fmt": "prettier --config prettier.config.js --write .",
        "lint": "eslint --ext js,jsx src/",
        "lint:fix": "eslint --ext js,jsx --fix src/",
        "lint:staged": "lint-staged",
        "fix": "npm run fmt && npm run lint:fix",
        "prepare": "husky install"
    },
    "license": "MIT",
    "author": {
        "name": "Tech by Choice Paid Source",
        "email": "paidsource@techbychoice.org"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx}": [
            "prettier --config prettier.config.js --write",
            "eslint --fix"
        ],
        "*.{css,gql,graphql,html,json,less,md,mdx,sass,scss}": [
            "prettier --config prettier.config.js --write"
        ],
        "*.{yaml,yml}": [
            "prettier --config prettier.config.js --tab-width 2 --write"
        ]
    },
    "devDependencies": {
        "@emotion/react": "latest",
        "@emotion/styled": "latest",
        "@mui/icons-material": "^5.15.6",
        "@mui/material": "latest",
        "@typescript-eslint/parser": "^6.20.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.17",
        "eslint": "^8.56.0",
        "eslint-plugin-react": "^7.33.2",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "postcss": "^8.4.33",
        "prettier": "^3.2.5",
        "react-quill": "^2.0.0",
        "react-router": "^6.21.3",
        "react-router-dom": "^6.21.3",
        "typescript": "^5.3.3",
        "vite": "^5.0.12"
    },
    "dependencies": {
        "@tiptap/extension-heading": "^2.1.16",
        "@tiptap/extension-paragraph": "^2.2.0",
        "@tiptap/extension-text": "^2.1.16",
        "@tiptap/pm": "^2.2.0",
        "@tiptap/react": "^2.1.16",
        "@tiptap/starter-kit": "^2.2.0",
        "quill": "^1.3.7",
        "react": "^18.2.0",
        "react-dev-utils": "^12.0.1",
        "react-dom": "^18.2.0"
    },
    "resolutions": {
        "nth-check": "^2.1.1"
    }
}
